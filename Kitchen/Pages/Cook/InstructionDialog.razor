@using Kitchen.Backend.Models

<MudDialog>
    <DialogContent>
        <MudNumericField @bind-Value="Number" Label="Number" Variant="Variant.Text" Min="1"/>
        <MudTextField @bind-Value="Description" T="string" Label="Description" Variant="Variant.Text"/>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Save">Save</MudButton>
        <MudButton Color="Color.Primary" OnClick="Delete">Delete</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string Description { get; set; }

    [Parameter]
    public int Number { get; set; }

    void Cancel() => MudDialog.Cancel();

    void Save()
    {
        MudDialog.Close(DialogResult.Ok(new Instruction { Description = Description, Number = Number}));
    }

    void Delete()
    {
        MudDialog.Close(DialogResult.Ok("Delete"));
    }

}