@using Kitchen.Backend.Models

<MudDialog>
    <DialogContent>
        <MudNumericField @bind-Value="OldNumber" Label="Number" Variant="Variant.Text" Min="1"/>
        <MudTextField @bind-Value="OldInstruction" T="string" Label="Instruction" Variant="Variant.Text"/>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Save">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    private string NewInstruction { get; set; }
    private int NewNumber { get; set; }

    [CascadingParameter] 
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string OldInstruction { get; set; }

    [Parameter]
    public int OldNumber { get; set; }

    void Save()
    {
        MudDialog.Close(DialogResult.Ok(new Instruction { Description = OldInstruction, Number = OldNumber}));
    }

    void Cancel() => MudDialog.Cancel();

}