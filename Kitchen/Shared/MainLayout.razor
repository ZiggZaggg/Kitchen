@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudPaper Elevation="25">
        <MudToolBar>
            <MudIconButton Icon="@Icons.Material.Outlined.FoodBank" Href="/cook" />
            <MudSwitch @bind-Value="@Editable" Label="Edit" Color="Color.Info" Style="margin-left: auto;" />
        </MudToolBar>
    </MudPaper>
    <MudMainContent>
        <CascadingValue Value="@Editable">
            @Body
        </CascadingValue>
    </MudMainContent>
</MudLayout>

@code
{
    private bool Editable { get; set; }
}
